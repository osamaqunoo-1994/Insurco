<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Order.NewOrderHelthActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back_lang"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/top"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">


                <ImageView
                    android:id="@+id/back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"

                    android:src="@drawable/ic_baseline_arrow_back_ios_24" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="13dp"
                    android:src="@drawable/logo_w"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp" />


            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:id="@+id/lay_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/circle_p"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="70dp"
                                android:layout_height="2dp"
                                android:background="@color/purple_200" />

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/circle_p"
                                android:gravity="center"
                                android:text="2"
                                android:textColor="@color/white"
                                android:textSize="11dp"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="@string/Inquiry_Form"
                            android:textColor="@color/purple_200"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/Name"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="5dp"

                            android:background="@drawable/back_edit"
                            android:hint="@string/Name"
                            android:inputType="text"

                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/Phone_number"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_margin="15dp"
                            android:gravity="center"
                            android:background="@drawable/back_edit"
                            android:paddingStart="10dp"

                            android:paddingEnd="10dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:src="@drawable/emirate_flag"
                                android:layout_height="wrap_content" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+971"
                                android:paddingStart="5dp"
                                android:textColor="#0C99E7"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/phone"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@android:color/transparent"

                                android:hint="@string/Phone_number"
                                android:inputType="number"
                                android:paddingStart="10dp"

                                android:paddingEnd="10dp"
                                android:textSize="13dp" />
                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:text="@string/Email"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/back_edit"
                            android:hint="@string/Email"
                            android:inputType="textEmailAddress"

                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/Gender_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/Gender"
                        android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/back_edit"

                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <Spinner
                                android:id="@+id/Genders"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"

                                android:gravity="center_vertical"

                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textSize="13dp" />
                        </LinearLayout>

  <LinearLayout
      android:id="@+id/Are_you_pregnant_lay"
      android:orientation="vertical"
      android:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
          android:id="@+id/Are_you_pregnant_txt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="15dp"
          android:layout_marginEnd="15dp"
          android:layout_marginTop="10dp"
          android:text="@string/Are_you_pregnant"
          android:textStyle="bold" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_marginStart="15dp"
          android:layout_marginEnd="15dp"
          android:background="@drawable/back_edit"

          android:layout_marginTop="5dp"
          android:layout_height="wrap_content">

          <Spinner
              android:id="@+id/Are_you_pregnant"
              android:layout_width="match_parent"
              android:layout_height="45dp"

              android:gravity="center_vertical"

              android:paddingStart="10dp"
              android:paddingEnd="10dp"
              android:textSize="13dp" />
      </LinearLayout>

  </LinearLayout>

                        <TextView
                            android:id="@+id/has_you_insurance_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="10dp"
                            android:textSize="13dp"
                            android:text="@string/has_you_insurance"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/back_edit"

                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <Spinner
                                android:id="@+id/has_you_insurance"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"

                                android:gravity="center_vertical"

                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textSize="13dp" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/chronic_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:textSize="13dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/chronic"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/back_edit"

                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                            <Spinner
                                android:id="@+id/chronic"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"

                                android:gravity="center_vertical"

                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textSize="13dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp">

                            <CheckBox
                                android:id="@+id/accept"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Accept_the"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/terms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:text="@string/terms_cond"
                                android:textColor="@color/purple_200"
                                android:textSize="14dp"
                                android:textStyle="bold" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center">

                            <LinearLayout
                                android:id="@+id/next"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_margin="20dp"
                                android:background="@drawable/button_login"
                                android:gravity="center"

                                android:paddingStart="15dp"
                                android:paddingEnd="15dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingStart="25dp"
                                    android:paddingEnd="25dp"
                                    android:text="@string/NextBtn"
                                    android:textColor="@color/white"
                                    android:textSize="13dp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/circle"
                                    android:padding="6dp"
                                    android:src="@drawable/next_icon" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center">


                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/circle_p"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="11dp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="70dp"
                                android:layout_height="2dp"
                                android:background="@color/purple_200" />

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/circle_p"
                                android:gravity="center"
                                android:text="2"
                                android:textColor="@color/white"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="@string/Attach_files"
                            android:textColor="@color/purple_200"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="134dp"
                                    android:layout_height="134dp">

                                    <ImageView
                                        android:layout_width="134dp"
                                        android:layout_height="134dp"
                                        android:background="@drawable/back_about_us"
                                        android:padding="40dp"
                                        android:src="@drawable/icon_material_library_add1" />

                                    <ImageView
                                        android:id="@+id/ownership"
                                        android:layout_width="134dp"
                                        android:layout_height="134dp" />


                                </RelativeLayout>


                                <TextView
                                    android:id="@+id/OwnerShip_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="7dp"
                                    android:text="@string/Passport"
                                    android:textColor="@color/purple_200"
                                    android:textSize="13dp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="134dp"
                                    android:layout_height="134dp">

                                    <ImageView
                                        android:layout_width="134dp"
                                        android:layout_height="134dp"
                                        android:background="@drawable/back_about_us"
                                        android:padding="40dp"
                                        android:src="@drawable/icon_material_library_add1" />

                                    <ImageView
                                        android:id="@+id/Emirate_ID"
                                        android:layout_width="134dp"
                                        android:layout_height="134dp" />


                                </RelativeLayout>


                                <TextView
                                    android:id="@+id/Emirate_ID_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="7dp"
                                    android:text="@string/Emirate_ID"
                                    android:textColor="@color/purple_200"
                                    android:textSize="13dp" />


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="134dp"
                                    android:layout_height="134dp">

                                    <ImageView
                                        android:layout_width="134dp"
                                        android:layout_height="134dp"
                                        android:background="@drawable/back_about_us"
                                        android:padding="40dp"
                                        android:src="@drawable/icon_material_library_add1" />

                                    <ImageView
                                        android:id="@+id/visa_page_image"
                                        android:layout_width="134dp"
                                        android:layout_height="134dp" />


                                </RelativeLayout>


                                <TextView
                                    android:id="@+id/visa_page_image_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="7dp"
                                    android:text="@string/visaPage"
                                    android:textColor="@color/purple_200"
                                    android:textSize="13dp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="134dp"
                                    android:layout_height="134dp">


                                </RelativeLayout>


                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ProgressBar
                                android:id="@+id/loading"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/submit"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_margin="20dp"
                                android:background="@drawable/button_login"
                                android:gravity="center"

                                android:paddingStart="15dp"
                                android:paddingEnd="15dp">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingStart="25dp"
                                    android:paddingEnd="25dp"
                                    android:text="@string/Submit"
                                    android:textColor="@color/white"
                                    android:textSize="13dp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/circle"
                                    android:padding="6dp"
                                    android:src="@drawable/next_icon" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>


        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>