<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        android:background="@drawable/back_company"
        android:padding="10dp">
        <ImageView
            android:id="@+id/img"
            android:layout_width="60dp"
            android:background="@drawable/back_order"
            android:padding="5dp"
            android:src="@drawable/logo_card"
            android:layout_height="60dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/title_comparison"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:textColor="@color/purple_200"
                    android:text="Expires in 8 hours"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:textStyle="bold"
                    android:paddingBottom="2dp"
                    android:background="@drawable/back_exp"
                    android:textSize="13dp"

                    android:layout_height="wrap_content"/>


            </LinearLayout>



        </LinearLayout>
        <ImageView
            android:layout_width="40dp"
            android:padding="9dp"
            android:src="@drawable/ic_baseline_navigate_next_24"
            android:layout_height="40dp"/>

    </LinearLayout>


</LinearLayout>